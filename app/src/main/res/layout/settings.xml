<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#cddc39"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/absentSMSTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Absent : SMS"/>

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="SMS OFF"
            android:textOn="SMS ON"
            android:layout_marginRight="16dp"
            android:id="@+id/absentOnBTN"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/presentSMSTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Present : SMS"/>

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="SMS OFF"
            android:textOn="SMS ON"
            android:layout_marginRight="16dp"
            android:id="@+id/presentOnBTN"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/csvDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Downlod CSV"
            android:textColor="#000"
            android:layout_weight="2" />

        <Button
            android:id="@+id/downCSV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#827717"
            android:textColor="#bd000000"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:text="Download"
            android:onClick="downCSV"/>


    </LinearLayout>



</LinearLayout>