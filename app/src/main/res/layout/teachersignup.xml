<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#433e3e3e"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Your Information"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:layout_marginTop="10dp"
        android:ems="25"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/teacherid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Id"
        android:ems="15"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/teacherSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Subject"
        android:ems="15"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/teacherClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Class"
        android:ems="10"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/teacherSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Section"
        android:ems="10"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="SignUp"
        android:background="#bd000000"
        android:textColor="#e86837"
        android:textStyle="bold"
        android:onClick="signUp"
        android:layout_gravity="center_horizontal"/>




</LinearLayout>